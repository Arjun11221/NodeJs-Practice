<%- include('./base/header.ejs')%>
<% if(allpost.length>0){ 
    for(var i = 0; i <allpost.length; i++){ %>
        <div class="container mt-5 shadow-lg p-3 mb-5 bg-body-tertiary rounded">
            <div class="row">
            <div class="col-sm-12 col-xl-6">
                <img src="" alt="" />
            </div>
        <div class="col-sm-12 col-xl-6">
            <div class="row">
            <h1>
                <%= allpost[i].title %>
            </h1>
            <hr />
        </div>
        <div class="row">
        <p>
          <%= allpost[i].description %>
        </p>
      </div>
    </div>
  </div>
</div>
<% } } %> 
